            <Ellipse x:Name="C22" Grid.Row="2" Grid.Column="2" Stroke="Black" Fill="{Binding BoardLocationColors[16]}" />
            <Button Grid.Row="2" Grid.Column="2" Opacity="0" IsEnabled="{Binding IsBoardEnabled}" Click="Button_Click" />
