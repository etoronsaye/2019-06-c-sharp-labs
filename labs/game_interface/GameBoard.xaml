<UserControl x:Class="game_interface.GameBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:game_interface"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Beige" HorizontalAlignment="Stretch">
        <Border BorderBrush="NavajoWhite" BorderThickness="10">
            <Canvas x:Name="GameArea" Background="Beige" ClipToBounds="True" >
                <Rectangle StrokeThickness="3" />
                <Label x:Name="User" Background="AliceBlue" Canvas.Left="650" Canvas.Top="89" Height="23" Width="100"/>
                <Button x:Name="Exit" Content="Exit" Canvas.Left="650" Canvas.Top="325" Width="100" Background="BurlyWood"/>
            </Canvas>
        </Border>
    </Grid>
</UserControl>
